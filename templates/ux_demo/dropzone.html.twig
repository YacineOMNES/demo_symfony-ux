                align-items: center;
                flex: 1;
            }

            .file-icon {
                font-size: 2rem;
                margin-right: 1rem;
            }

            .file-details {
                flex: 1;
            }

            .file-name {
                font-weight: bold;
                color: #2d3748;
                margin-bottom: 0.25rem;
            }

            .file-size {
                color: #999;
                font-size: 0.9rem;
            }

            .file-progress {
                width: 100%;
                height: 4px;
                background: #e2e8f0;
                border-radius: 2px;
                margin-top: 0.5rem;
                overflow: hidden;
            }

            .file-progress-bar {
                height: 100%;
                background: linear-gradient(90deg, #667eea, #764ba2);
                transition: width 0.3s;
            }

            .file-status {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .status-badge {
                padding: 0.25rem 0.75rem;
                border-radius: 12px;
                font-size: 0.85rem;
                font-weight: bold;
            }

            .status-badge.success {
                background: #c6f6d5;
                color: #22543d;
            }

            .status-badge.uploading {
                background: #fef3c7;
                color: #92400e;
            }

            .btn-remove {
                background: #ef4444;
                color: white;
                border: none;
                padding: 0.5rem 1rem;
                border-radius: 5px;
                cursor: pointer;
                transition: all 0.3s;
            }

            .btn-remove:hover {
                background: #dc2626;
            }

            .upload-stats {
                display: flex;
                gap: 2rem;
                margin-top: 1.5rem;
                padding: 1rem;
                background: #e0e7ff;
                border-radius: 8px;
            }

            .stat-item {
                text-align: center;
            }

            .stat-value {
                font-size: 1.5rem;
                font-weight: bold;
                color: #667eea;
            }

            .stat-label {
                color: #4c51bf;
                font-size: 0.9rem;
            }

            .code-example {
                background: #2d3748;
                color: #e2e8f0;
                padding: 1.5rem;
                border-radius: 8px;
                margin-top: 2rem;
                overflow-x: auto;
            }

            .code-example pre {
