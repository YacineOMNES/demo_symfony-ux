                    <div class="stat-value" data-dropzone-target="fileCount">0</div>
                    <div class="stat-label">Fichiers</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" data-dropzone-target="totalSize">0 KB</div>
                    <div class="stat-label">Taille totale</div>
                </div>
            </div>
        </div>

